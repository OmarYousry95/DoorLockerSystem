#include "HMI_ECU.h"


int main()
{
	/*Initialises LCD*/
	LCD_init();
//	uint8 key;
	while(1)
	{
		HMI_welcome();
	}
}


void HMI_welcome(void)
{
	LCD_displayStringRowColumn(0,3,"Door Locker");
	LCD_displayStringRowColumn(1,2,"Press any key");
	while(KEYPAD_getPressedKey() == 0);
	LCD_clearScreen();
}

void HMI_setNewPassword(void)
{
	LCD_displayStringRowColumn(0,0,"Set new password");
}
